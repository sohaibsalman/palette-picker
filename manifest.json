{
  "version": "0.0.1",
  "manifest_version": 3,
  "name": "Palette Picker",
  "offline_enabled": true,
  "permissions": ["storage", "contextMenus"],
  "homepage_url": "",
  "description": "Effortlessly capture and explore vibrant colors with our intuitive color picker extension.",
  "commands": {
    "_execute_action": {}
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Palette Picker",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
